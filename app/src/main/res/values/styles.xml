<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerDropDownItemStyle">@style/myspinnerDropDownItemStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Error">
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="Text.Error.Default">
        <item name="android:textColor">@color/errorDefault</item>
    </style>

    <style name="myspinnerDropDownItemStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#D0D7DF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/bluishTextColor</item>
        <item name="android:textColorPrimary">@color/bluishTextColor</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogButtonStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <style name="radioBtn" parent="RadioButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#D0D7DF</item>

    </style>
    <!--<style name="MaterialProgressBar" parent="Widget.MaterialProgressBar.ProgressBar"/>-->


    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonStyle">@style/btn</item>
    </style>

    <style name="btn" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
